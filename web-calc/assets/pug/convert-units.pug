include _config.pug

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width")
    title Convert Units 単位変換 单位转换 - #{siteName}
    include _icon.pug
    link(rel="stylesheet", href=cssUrl+"bootstrap.custom.min.css")
    link(rel="stylesheet", href=cssUrl+"common.css")
    link(rel="stylesheet", href=cssUrl+"convert-units.css")
    script(src=jsUrl+"common.js")
    script(src=jsUrl+"convert-units.js")
  body
    include _pageHeader.pug
    h1
      span.en(lang="en") Convert Units
      span.ja(lang="ja") 単位変換
      span.cn(lang="zh-cn") 单位转换
    p.alert.alert-info
      span.en(lang="en")
        | Enter the value of the standard unit you want to calculate.
        br
        | Click or tap the button of the unit to be converted and calculate.
      span.ja(lang="ja")
        | 計算したい基準となる単位の値を入力します。
        br
        | 変換する単位のボタンを押して計算します。
      span.cn(lang="zh-cn")
        | 输入你要计算的标准单位的数值。
        br
        | 单击或点击要转换的单位的按钮并进行计算。
    .container
      #temperature
        h2.mt-0
          span.en(lang="en") Temperature
          span.ja(lang="ja") 温度
          span.cn(lang="zh-cn") 温度
        p.input-group
          input#celsius(type="number" step="0.01" value="0").form-control
          span.input-group-text ℃
        p.input-group
          input#fahrenheit(type="number" step="0.01" value="0").form-control
          span.input-group-text ℉
        p.mb-3
          input#changeFahrenheit(type="button" value="℃ → ℉").btn.btn-outline-primary.w-100.mb-3
          input#changeCelsius(type="button" value="℉ → ℃").btn.btn-outline-primary.w-100
      #length
        h2.mt-0
          span.en(lang="en") Length
          span.ja(lang="ja") 長さ
          span.cn(lang="zh-cn") 长度
        p.input-group
          input#centimeters(type="number" value="0").form-control
          span.input-group-text cm
        p.input-group
          input#inch(type="number" value="0").form-control
          span.input-group-text inch
        p.input-group
          input#feet(type="number" value="0").form-control
          span.input-group-text feet
        p.mb-3
          input#changeInch(type="button" value="cm → inch").btn.btn-outline-primary.w-100.mb-3
          input#changeCentimeters(type="button" value="inch → cm").btn.btn-outline-primary.w-100.mb-3
          input#changeFeet(type="button" value="feet → cm, inch").btn.btn-outline-primary.w-100
      #convMYF
        h3.mt-0
          span.en(lang="en") Conversion of meters, yards and feet
          span.ja(lang="ja") mとヤードとフィートの変換
          span.cn(lang="zh-cn") 米、码和英尺的转换
        p.input-group
          input#meter(type="number" value="0").form-control
          span.input-group-text m
        p.input-group
          input#yard(type="number" value="0").form-control
          span.input-group-text yard
        p.input-group
          input#feet2(type="number" value="0").form-control
          span.input-group-text feet
        p.mb-3
          input#changeYard(type="button" value="m → yard, feet").btn.btn-outline-primary.w-100.mb-3
          input#changeMeter(type="button" value="yard → m, feet").btn.btn-outline-primary.w-100.mb-3
          input#ChangeFeet2(type="button" value="feet → m, yard").btn.btn-outline-primary.w-100
      #convKmMiles
        h3.mt-0
          span.en(lang="en") Conversion of kilometers and miles
          span.ja(lang="ja") kmとマイルの変換
          span.cn(lang="zh-cn") 千米和英里的转换
        p.input-group
          input#kilometer(type="number" value="0").form-control
          span.input-group-text km
        p.input-group
          input#mile(type="number" value="0").form-control
          span.input-group-text mile
        p.mb-3
          input#changeMile(type="button" value="km → mile").btn.btn-outline-primary.w-100.mb-3
          input#changeKilometer(type="button" value="mile → km").btn.btn-outline-primary.w-100
      #weight
        h2.mt-0
          span.en(lang="en") Weight
          span.ja(lang="ja") 重量
          span.cn(lang="zh-cn") 重量
        p.input-group
          input#kg(type="number" value="0").form-control
          span.input-group-text kg
        p.input-group
          input#pound(type="number" value="0").form-control
          span.input-group-text pound
        p.mb-3
          input#changePound(type="button" value="kg → lb").btn.btn-outline-primary.w-100.mb-3
          input#changeKg(type="button" value="lb → kg").btn.btn-outline-primary.w-100
      #volume
        h2.mt-0
          span.en(lang="en") Volume
          span.ja(lang="ja") 体積
          span.cn(lang="zh-cn") 体积
        p.input-group
          input#liters(type="number" value="0").form-control
          span.input-group-text L
        p.input-group
          input#USGallons(type="number" value="0").form-control
          span.input-group-text US Gallons
        p.input-group
          input#UKGallons(type="number" value="0").form-control
          span.input-group-text UK Gallons
        p.mb-0
          input#changeGallons(type="button" value="L → gal").btn.btn-outline-primary.w-100.mb-3
          input#changeLiters(type="button" value="gal(US) → L, gal(UK)").btn.btn-outline-primary.w-100.mb-3
          input#changeLitersUSG(type="button" value="gal(UK) → L, gal(US)").btn.btn-outline-primary.w-100
    #speed
      h2
        span.en(lang="en") Speed
        span.ja(lang="ja") 速度
        span.cn(lang="zh-cn") 速度
      p.input-group
        input#mps(type="number" value="0").form-control
        span.input-group-text m/s
      p.input-group
        input#kmph(type="number" value="0").form-control
        span.input-group-text kmph
      p.mb-0
        input#changeKmph(type="button" value="m/s → kmph").btn.btn-outline-primary.w-100.mb-3
        input#changeMps(type="button" value="kmph → m/s").btn.btn-outline-primary.w-100
    #currency
      h2
        span.en(lang="en") Currency
        span.ja(lang="ja") 通貨
        span.cn(lang="zh-cn") 货币
      p Note: This calculation is experimental.
      p
        input#btnHReload(type="button", value="Reload").btn.btn-outline-primary
      p#textCurrencyDate
      input#JPY(type="number" value="0" min="0").mb-3
      | &nbsp;JPY,&nbsp;
      input#USD(type="number" value="0" step="0.01" min="0").mb-3
      | &nbsp;USD,&nbsp;
      input#EUR(type="number" value="0" step="0.01" min="0").mb-3
      | &nbsp;EUR,&nbsp;
      input#GBP(type="number" value="0" step="0.01" min="0").mb-3
      | &nbsp;GBP,&nbsp;
      input#AUD(type="number" value="0" step="0.01" min="0").mb-3
      | &nbsp;AUD,&nbsp;
      input#CAD(type="number" value="0" step="0.01" min="0").mb-3
      | &nbsp;CAD
      #btnCurrency
        input#changeJPY(type="button" value="JPY → Other currencies").btn.btn-outline-primary
        input#changeUSD(type="button" value="USD → Other currencies").btn.btn-outline-primary
        input#changeEUR(type="button" value="EUR → Other currencies").btn.btn-outline-primary
        input#changeGBP(type="button" value="GBP → Other currencies").btn.btn-outline-primary
        input#changeAUD(type="button" value="AUD → Other currencies").btn.btn-outline-primary
        input#changeCAD(type="button" value="CAD → Other currencies").btn.btn-outline-primary
    include _pageFooter